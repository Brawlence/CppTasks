{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current file",
            "type": "shell",

            "windows":{
                "options": {
                    "cwd": "C:/msys2/mingw64/bin/",
                    //"shell": {
                    //      "executable": "C:/msys2/mingw64.exe",
                    ////      "args": ["/d", "/c"]   // - windws CMD args, don't use for mingw64
                    //},
                },
                "command": "g++.exe",
                "args": ["-o", "\"${workspaceFolder}\\test.exe\"", "-g", "\"${file}\""]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": ["-o", "${workspaceFolder}/test", "-g", "${file}"]
            },

            "group": {"kind": "build", "isDefault": true}
        },
        {
            "label": "Build main",
            "type": "shell",

            "windows":{
                "options": {
                    "cwd": "C:/msys2/mingw64/bin/",
                    //"shell": {
                    //      "executable": "C:/msys2/mingw64.exe",
                    ////      "args": ["/d", "/c"] // windws CMD args, don't use for mingw64
                    //},
                },
                "command": "C:/msys2/mingw64/bin/g++.exe",
                "args": ["-o", "\"${workspaceFolder}\\main.exe\"", "-g", "\"${file}\""]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": ["-o", "${workspaceFolder}/main", "-g", "${file}"]
            },

            "group": "build"
        }
    ]
}